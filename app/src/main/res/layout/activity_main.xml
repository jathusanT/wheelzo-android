<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".MainActivity"/>

    <ListView android:id="@+id/left_drawer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:background="#ffffffff"
        android:padding="10dp"/>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/expandable_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="right"
        fab:fab_addButtonColorNormal="@color/pink_accent"
        fab:fab_addButtonColorPressed="@color/pink_accent_dark"
        fab:fab_addButtonPlusIconColor="@color/white"
        android:layout_margin="16dp">

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/create_ride"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_car"
            fab:fab_colorNormal="@color/blue_accent"
            fab:fab_colorPressed="@color/blue_accent_dark"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/report_issue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search"
            fab:fab_colorNormal="@color/green_accent"
            fab:fab_colorPressed="@color/green_accent_dark"
            fab:fab_size="mini"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/search_ride"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_support"
            fab:fab_colorNormal="@color/yellow_accent"
            fab:fab_colorPressed="@color/yellow_accent_dark"
            fab:fab_size="mini"/>

    </com.getbase.floatingactionbutton.FloatingActionsMenu>


</android.support.v4.widget.DrawerLayout>