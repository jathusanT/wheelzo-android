<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/light_gray"
    android:gravity="center">

    <ProgressBar
        android:id="@+id/my_spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_info"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:paddingTop="50dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/my_rides_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_info"
        android:scrollbars="vertical" />

    <TextView
        android:id="@+id/no_rides_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:textColor="@color/medium_gray"
        android:text="@string/no_rides"/>

    <ImageView
        android:id="@+id/no_rides_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/no_rides_text"
        android:src="@drawable/ic_thumbs_down"/>


    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_add"
        android:layout_margin="30dp"
        fab:fab_colorNormal="@color/pink_accent"
        fab:fab_colorPressed="@color/pink_accent_dark"
        fab:fab_colorRipple="@color/pink_ripple" />

</RelativeLayout>
